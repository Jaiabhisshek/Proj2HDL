/**
 * Computes the sum of two bits.
 */

CHIP HalfAdder {
    IN a, b;    // 1-bit inputs
    OUT sum,    // Right bit of a + b 
        carry;  // Left bit of a + b

    PARTS:
    // Put you code here:
    HalfAdder(a=a, b=b, carry=c);
    HalfAdder(a=s1, b=c, carry=c);
    Or(a=c1, b=c2, out=carry);
}
